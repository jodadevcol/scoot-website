---
import Hero from "@/components/Hero.astro"
import HeroOvals from "@/components/HeroOvals.astro"
import HeroPicture from "@/components/HeroPicture.astro"
import Chevron from "@/components/icons/Chevron.astro"
import Typography from "@/components/Typography.astro"
import Layout from "@/layouts/Layout.astro"
import BaseContainer from "@/sections/BaseContainer.astro"
---

<Layout title="About">
	<!-- Hero -->
	<BaseContainer>
		<Hero title="About" />

		<div slot="decotations">
			<HeroOvals />
			<HeroPicture src="/assets/images/hero/design-system-hero-desktop.png" />
		</div>
	</BaseContainer>

	<!-- List Benefits -->
	<BaseContainer>
		<article class="px-5 py-16">
			<ul class="flex flex-col gap-y-32">
				<li>
					<article class="flex items-center justify-between">
						<header class="max-w-[445px]">
							<h2 class="mb-6 font-mono text-5xl font-bold tracking-tighter text-dark-100">
								Mobility for the digital era
							</h2>

							<div>
								<p class="font-sans text-base text-dark-200">
									Getting around should be simple (and even fun!) for everyone. We embrace
									technology to provide low cost, smart access to scooters at your fingertips.
								</p>
							</div>
						</header>

						<picture class="relative aspect-square w-full max-w-[445px]">
							<div class="overflow-hidden rounded-full">
								<img class="w-full object-cover" src="/assets/images/digital-era.jpg" alt="" />
							</div>

							<div
								class="absolute bottom-0 left-full top-0 aspect-square w-full overflow-hidden rounded-full bg-light-100 lg:ml-12 xl:ml-16"
							>
							</div>
						</picture>
					</article>
				</li>

				<li>
					<article class="flex flex-row-reverse items-center justify-between">
						<header class="max-w-[445px]">
							<h2 class="mb-6 font-mono text-5xl font-bold tracking-tighter text-dark-100">
								Better urban living
							</h2>

							<div>
								<p class="font-sans text-base text-dark-200">
									We’re helping connect cities and bring people closer together. Our scooters are
									also fully-electric and we offset the minimal carbon footprint for each ride.
								</p>
							</div>
						</header>

						<picture class="relative aspect-square w-full max-w-[445px]">
							<div class="overflow-hidden rounded-full">
								<img class="w-full object-cover" src="/assets/images/better-living.jpg" alt="" />
							</div>

							<div
								class="absolute bottom-0 right-full top-0 aspect-square w-full overflow-hidden rounded-full bg-light-100 lg:mr-12 xl:mr-16"
							>
							</div>
						</picture>
					</article>
				</li>
			</ul>
		</article>
	</BaseContainer>

	<!-- Our values -->
	<BaseContainer>
		<article class="py-16 text-center">
			<header class="mb-12">
				<h2 class="font-mono text-5xl font-bold text-dark-100">Our Values</h2>
			</header>

			<ul
				class="grid items-center justify-center gap-8"
				style="grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));"
			>
				<li class="flex max-w-[350px] flex-col items-center justify-center">
					<div class="relative py-16">
						<picture class="block aspect-square max-w-[240px] overflow-hidden rounded-full">
							<img class="w-full object-cover" src="/assets/images/our-tech.jpg" alt="" />
						</picture>

						<span
							class="absolute bottom-2 left-1/2 flex h-24 w-24 -translate-x-1/2 items-center justify-center overflow-hidden rounded-full bg-primary-100 p-7 font-mono text-2xl font-bold text-secondary-100"
						>
							01
						</span>
					</div>

					<div class="mt-8">
						<h4 class="mb-7 font-mono text-2xl font-bold text-dark-100">Our tech</h4>

						<div>
							<p class="font-sans text-base text-dark-200">
								We’re using cutting edge technology to drive accessible urban transportation
								forward. Our fully electric scooters are a joy to ride!
							</p>
						</div>
					</div>
				</li>

				<li class="flex max-w-[350px] flex-col items-center justify-center">
					<div class="relative py-16">
						<picture class="block aspect-square max-w-[240px] overflow-hidden rounded-full">
							<img class="w-full object-cover" src="/assets/images/our-integrity.jpg" alt="" />
						</picture>

						<span
							class="absolute bottom-2 left-1/2 flex h-24 w-24 -translate-x-1/2 items-center justify-center overflow-hidden rounded-full bg-primary-100 p-7 font-mono text-2xl font-bold text-secondary-100"
						>
							02
						</span>
					</div>

					<div class="mt-8">
						<h4 class="mb-7 font-mono text-2xl font-bold text-dark-100">Our tech</h4>

						<div>
							<p class="font-sans text-base text-dark-200">
								We’re using cutting edge technology to drive accessible urban transportation
								forward. Our fully electric scooters are a joy to ride!
							</p>
						</div>
					</div>
				</li>

				<li class="flex max-w-[350px] flex-col items-center justify-center">
					<div class="relative py-16">
						<picture class="block aspect-square max-w-[240px] overflow-hidden rounded-full">
							<img class="w-full object-cover" src="/assets/images/our-community.jpg" alt="" />
						</picture>

						<span
							class="absolute bottom-2 left-1/2 flex h-24 w-24 -translate-x-1/2 items-center justify-center overflow-hidden rounded-full bg-primary-100 p-7 font-mono text-2xl font-bold text-secondary-100"
						>
							03
						</span>
					</div>

					<div class="mt-8">
						<h4 class="mb-7 font-mono text-2xl font-bold text-dark-100">Our tech</h4>

						<div>
							<p class="font-sans text-base text-dark-200">
								We’re using cutting edge technology to drive accessible urban transportation
								forward. Our fully electric scooters are a joy to ride!
							</p>
						</div>
					</div>
				</li>
			</ul>
		</article>
	</BaseContainer>

	<!-- FQAS -->
	<BaseContainer>
		<article>
			<article class="px-5 py-16 text-center">
				<header class="mb-12">
					<h2 class="font-mono text-5xl font-bold text-dark-100">FAQs</h2>
				</header>

				<div
					class="group-faqs grid items-start justify-between gap-8"
					style="grid-template-columns: minmax(240px, 350px) 1fr;"
				>
					<Typography as="h2" variant="h3" color="dark100" class="w-full max-w-[350px]">
						How it works
					</Typography>

					<div class="ml-auto flex w-full max-w-[730px] flex-col gap-4">
						<article class="bg-[#F2F5F9] px-10 py-8">
							<header class="flex items-center justify-between gap-x-5 gap-y-2">
								<Typography as="h4" variant="h4" color="dark100">
									How do I download the app?
								</Typography>

								<button>
									<span class="max-h-2 w-full max-w-max text-primary-100"><Chevron /></span>
								</button>
							</header>

							<div class="mt-6" data-content="001">
								<div class="text-left">
									<Typography as="p" variant="body" color="dark100">
										To download the Scoot app, you can search “Scoot” in both the App and Google
										Play stores. An even simpler way to do it would be to click the relevant link at
										the bottom of this page and you’ll be re-directed to the correct page.
									</Typography>
								</div>
							</div>
						</article>

						<article class="bg-[#F2F5F9] px-10 py-8">
							<header class="flex items-center justify-between gap-x-5 gap-y-2">
								<Typography as="h4" variant="h4" color="dark100">
									Can I find a nearby Scoots?
								</Typography>

								<div class="max-h-2 w-full max-w-max text-primary-100">
									<span><Chevron /></span>
								</div>
							</header>
						</article>

						<article class="bg-[#F2F5F9] px-10 py-8">
							<header class="flex items-center justify-between gap-x-5 gap-y-2">
								<Typography as="h4" variant="h4" color="dark100">
									Do I need a license to ride?
								</Typography>

								<div class="max-h-2 w-full max-w-max text-primary-100">
									<span><Chevron /></span>
								</div>
							</header>
						</article>
					</div>
				</div>
			</article>
		</article>
	</BaseContainer>
</Layout>
