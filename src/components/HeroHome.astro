						<path
							id="Path 3"
							d="M407.952 145.444L446.378 107.018L407.952 68.5916"
							stroke="currentColor"
							stroke-width="15"
							stroke-linejoin="bevel"></path>
						<path
							id="Path 4"
							d="M0 8H270.115V107.369H446.378"
							stroke="currentColor"
							stroke-width="15"
							stroke-linejoin="bevel"></path>
