---
interface Props {
	benefits: {
		id: string
		title: string
		description: string
		image: {
			webp: string
			jpg: string
		}
	}[]
}

const { benefits } = Astro.props
const PATH_TO_IMAGES = "/assets/images/"
---

<article class="px-5 py-16">
	<ul class="flex flex-col gap-y-32">
		{
			benefits.map(({ id, title, description, image }, index) => {
				return (
					<li data-benefit={`${id}`}>
						<article
							class:list={[
								"flex items-center justify-between",
								index % 2 === 0 ? "flex-row" : "flex-row-reverse",
							]}
						>
							<header class="max-w-[445px]">
								<h2 class="mb-6 font-mono text-5xl font-bold tracking-tighter text-dark-100">
									{title}
								</h2>

								<div>
									<p class="font-sans text-base text-dark-200">{description}</p>
								</div>
							</header>

							<picture class="relative aspect-square w-full max-w-[445px]">
								<div class="overflow-hidden rounded-full">
									{/* {
							image.webp && (
								<source srcset={image.webp} type="image/webp" />
							)
						} */}
									<img
										class="w-full object-cover"
										data-img={image.jpg}
										src={`${PATH_TO_IMAGES}${image.webp || image.jpg}`}
										alt=""
									/>
								</div>

								<div
									class:list={[
										"absolute bottom-0 top-0 aspect-square w-full overflow-hidden rounded-full bg-light-100",
										index % 2 === 0
											? "left-full lg:ml-12 xl:ml-16"
											: "right-full lg:mr-12 xl:mr-16",
									]}
								/>
							</picture>
						</article>
					</li>
				)
			})
		}
	</ul>
</article>
