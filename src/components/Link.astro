---
interface Props {
	href?: string
	icon?: boolean
}

const { href, icon, ...props } = Astro.props
---

<a
	href={href}
	class="group relative block max-w-max cursor-pointer overflow-hidden border-[3px] border-primary-100 px-10 py-3 h-[54px]"
	{...props}
>
	<div class:list={["text-white group-hover:text-primary-100 transition-colors", {"inline-flex items-center justify-around gap-x-3": icon}]}>
		{
			icon && (
				<span class="z-10 size-5">
					<slot name="icon" />
				</span>
			)
		}

		<div class="flex items-center justify-center">
			<span
				class="z-10 font-mono font-bold"
			>
				<slot />
			</span>
			<span
				class="absolute inset-0 z-0 origin-left translate-x-0 bg-primary-100 transition-transform duration-300 group-hover:-translate-x-full"
			></span>
			<span
				class="absolute inset-0 z-0 origin-left translate-x-full bg-transparent transition-transform duration-300 group-hover:translate-x-0"
			></span>
		</div>
	</div>
</a>
