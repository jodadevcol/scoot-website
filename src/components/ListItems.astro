---
import { PATH_TO_IMAGES } from "@/const/global"
import type { ListOfItems } from "@/types/Global"
import Typography from "./Typography.astro"

interface Props {
	listOfItems: ListOfItems[]
}

const { listOfItems } = Astro.props
---

<article class="px-5 py-16">
	<ul class="flex flex-col gap-y-32">
		{
			listOfItems.map(({ id, title, description, image }, index) => {
				return (
					<li data-benefit={`${id}`}>
						<article
							class:list={[
								"flex items-center justify-between",
								index % 2 === 0 ? "flex-row" : "flex-row-reverse",
							]}
						>
							<header class="max-w-[445px]">
								<Typography as="h2" variant="h2" color="dark100" class="mb-6">
									{title}
								</Typography>

								<div>
									<Typography as="p" variant="body" color="dark200">
										{description}
									</Typography>
								</div>
							</header>

							<picture class="relative aspect-square w-full max-w-[445px]">
								<div class="overflow-hidden rounded-full">
									{/* {
							image.webp && (
								<source srcset={image.webp} type="image/webp" />
							)
						} */}
									<img
										class="w-full object-cover"
										data-img={image.jpg}
										src={`${PATH_TO_IMAGES}${image.webp || image.jpg}`}
										alt=""
									/>
								</div>

								<div
									class:list={[
										"absolute bottom-0 top-0 aspect-square w-full overflow-hidden rounded-full bg-light-100",
										index % 2 === 0
											? "left-full lg:ml-12 xl:ml-16"
											: "right-full lg:mr-12 xl:mr-16",
									]}
								/>
							</picture>
						</article>
					</li>
				)
			})
		}
	</ul>
</article>
