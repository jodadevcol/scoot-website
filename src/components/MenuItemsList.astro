---
const MENU_ITEMS = [
{
		id: 1,
		title: 'About',
		url: '/about',
	},
	{
		id: 2,
		title: 'Location',
		url: '/location',
	},
	{
		id: 3,
		title: 'Carriers',
		url: '/careers',
	},
]
---

<nav>
	<ul class="flex items-center justify-start gap-x-8 text-dark-200">
