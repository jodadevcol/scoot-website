			MENU_ITEMS.map(({id, title, url}) => {
				return (
				<li class="" data-menu-item={id}>
					<a href={url} class="transition-colors duration-300 ease-out hover:text-primary-100">
						<span class="font-mono font-bold">{title}</span>
					</a>
				</li>
				)
			})
		}
	</ul>
</nav>
