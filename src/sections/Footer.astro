---
import CardsApp from "@/components/CardsApp.astro"
import HeroOvals from "@/components/HeroOvals.astro"
import MenuItemsListFooter from "@/components/MenuItemsListFooter.astro"
import SocialMediaList from "@/components/SocialMediaList.astro"
import Typography from "@/components/Typography.astro"
import Logo from "@/icons/Logo.astro"
import BaseContainer from "./BaseContainer.astro"
---

<footer class="mt-16 overflow-hidden">
	<BaseContainer sectionClass="bg-dark-100 z-0">
		<article
			class="footer-top relative grid grid-rows-1 items-center justify-center gap-y-10 py-16 max-lg:text-center lg:grid-cols-2 lg:grid-rows-none lg:justify-between lg:gap-x-5 lg:gap-y-0 lg:py-24"
		>
			<header class="w-full">
				<Typography as="h2" variant="h2" color="white">
					Sign up and <br /> Scoot off today
				</Typography>
			</header>

			<CardsApp />

			<HeroOvals size="large" opacity={true} position="footer" />
		</article>
	</BaseContainer>

	<BaseContainer sectionClass="bg-[#333A44] z-10">
		<article
			class="footer-bottom flex flex-col items-center gap-x-5 gap-y-20 pb-20 pt-16 lg:flex-row lg:justify-between lg:gap-y-2 lg:py-8"
		>
			<div class="flex flex-col items-center justify-start gap-14 lg:flex-row">
				<a
					class="block w-full max-w-28 text-white transition-opacity duration-300 ease-out hover:opacity-70"
					href="/"
				>
					<Logo class="w-full" />
				</a>

				<MenuItemsListFooter />
			</div>

			<SocialMediaList />
		</article>
	</BaseContainer>
</footer>
